<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.siji.SetActivity"
    android:background="@color/colorBack"
    android:id="@+id/container_playlist_con">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingRight="15dp"
        android:paddingLeft="15dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="토닥토닥 레코드"
            android:textSize="40dp"
            android:gravity="center"
            android:paddingTop="20dp"
            android:paddingBottom="10dp"
            android:fontFamily="@font/scenarioo"
            android:textColor="@color/colorFont_main"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/line2" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/line1" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <ImageView
                    android:id="@+id/playlist_BTN_tab1"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/playlist_tab1" />

                <ImageView
                    android:id="@+id/playlist_BTN_tab2"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/playlist_tab2" />

                <ImageView
                    android:id="@+id/playlist_BTN_tab3"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/playlist_tab3" />

                <ImageView
                    android:id="@+id/playlist_BTN_tab4"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/playlist_tab4" />

                <ImageView
                    android:id="@+id/playlist_BTN_tab5"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/playlist_tab5" />

                <ImageView
                    android:id="@+id/playlist_BTN_tab6"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/playlist_tab6" />

            </LinearLayout>

        </HorizontalScrollView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/line2" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/line1" />

        <ListView
            android:id="@+id/playlist_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:layout_weight="6.5"></ListView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="15dp" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>