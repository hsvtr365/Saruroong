<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBack">

    <TextView
        android:id="@+id/msgWriteTV01"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_size"
        android:textSize="@dimen/title_text_size"
        android:gravity="center"
        android:background="@color/colorPrimary2"
        android:textColor="@color/colorTextWight"
        android:text="MUNDAY / OCTOBER 9 /2017" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <RelativeLayout
        android:layout_width="310dp"
        android:layout_height="310dp"
        android:orientation="vertical"
        android:layout_gravity="center">

        <EditText
            android:id="@+id/msgWriteItemET01"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:elevation="2dp"
            android:hint="어떤 말을 전하고 싶으신가요?"
            android:textSize="30dp"
            android:textColor="@color/colorFont_main"
            android:fontFamily="@font/scenarioo"/>

        <ImageView
            android:id="@+id/msgBackIV02"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="5dp"
            android:elevation="1dp"
            android:scaleType="centerCrop"
            android:background="#fcf1f1"
            android:alpha="0.6"/>

        <ImageView
            android:id="@+id/msgBackIV01"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="5dp"
            android:scaleType="centerCrop"
            android:elevation="0dp"
            android:src="@mipmap/b"/>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/line1"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/line2"/>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_above="@+id/linearLayout2"
        android:layout_alignParentStart="true"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/msgPhotoTV01"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="| MY PHOTO |"
            android:fontFamily="@font/scenarioo"
            android:textSize="20dp"
            android:clickable="true"/>

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/msgWriteTV02"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="| DONE |"
            android:fontFamily="@font/scenarioo"
            android:textSize="20dp"
            android:clickable="true"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <TextView
        android:id="@+id/msgPhotoTV04"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="20dp"
        android:fontFamily="@font/scenarioo"
        android:text="| 이미지를 선택해주세요 |" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/msgWrightRV01"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutManager="StaggeredGridLayoutManager">

    </android.support.v7.widget.RecyclerView>
</LinearLayout>


